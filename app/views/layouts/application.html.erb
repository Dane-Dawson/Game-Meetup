<!DOCTYPE html>
<html>
  <head>
    <title>GameMeetup</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="topnav">
      <a>-----------------LFG Gaming Sessions-----------------</a>
      <a>-----</a>
      <a>-----</a>
      <a>     <% if logged_in? %>
    <%= button_to "Logout", sessions_path, method: :delete%>
    <% else %>
    <%= button_to "Login Page", login_path, method: :get%>
    <% end %> </a>
      <a>-----</a>
      <a>-----</a>    
    </div>

    <div id="mySidenav" class="sidenav">
      <a href="<%= games_path %>" id="about">All Games</a>
      <a href="<%= stores_path %>" id="blog">All Stores</a>
      <a href="<%= players_path %>" id="projects">Registed Players</a>
      <a href="<%= game_sessions_path %>" id="contact">Current Game Sessions</a>
    </div>
    
    <%= yield %>


    <br>
    <br>
    <br>
    <footer>
    <p>Follow the links below to view participating stores, players, or inventory of games to choose to play! <p>
    <% if logged_in? %>
    <%= button_to "Logout", sessions_path, method: :delete%>
    <% else %>
    <%= button_to "Login Page", login_path, method: :get%>
    <% end %>
    <p>||<%= link_to "View all games", games_path%> || <%= link_to "View all stores", stores_path%> || <%= link_to "View all players", players_path%> || <%= link_to "View Current Game Sessions", game_sessions_path %> ||</p>
    </footer>
  </body>
</html>
