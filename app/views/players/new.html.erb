<h1>Players</h1>
<p><% if @player.errors.any? %>
<p> Ya done messed up, check yo'self </p>
<% @player.errors.full_messages.each do |m|%>
    <%= m %><br><br>
    <% end %>
 <% end %>
<%= form_for @player do |f|%>
<%= f.label :name%><br>
<%= f.text_field :name%><br><br>
<%= f.label :password%><br>
<%= f.password_field :password, placeholder: "Password"%><br><br>
<%= f.label :password_confirmation%><br>
<%= f.password_field :password_confirmation, placeholder: "Confirm Password"%><br><br>
<%= f.label :bio%><br>
<%= f.text_area :bio%><br><br>
<%= f.label :age%><br>
<%= f.text_field :age %><br><br>
<%= f.submit "Create Player"%>
<%end%>