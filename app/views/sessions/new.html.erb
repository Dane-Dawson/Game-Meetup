<h1>Log in</h1>

<%= form_tag sessions_path do %>
    <%= label_tag "Player Name" %><br>
    <%= text_field_tag :name, nil, placeholder: "Player Name" %><br>
    <%= label_tag "Password" %><br>
    <%= password_field_tag :password, nil, placeholder: "Password" %><br>
    <%= submit_tag "Log In"%>
<% end %>